
page {
  background: #FFFFFF;
}
.item-list {
  margin: 20rpx 0 20rpx 20rpx;
  font-size: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
}
.btn-upload {
  display: inline-block;
  padding: 0 20rpx;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background: #E61532;
  font-size: 30rpx;
}
.imgbox {
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.progress-line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.imgbox-img {
  width: 100%;
}
.getTasks {
  background: #E61532;
  width: 80%;
  color: #FFFFFF;
  margin: 30rpx auto;
}
.Taskhint {
  width: 96%;
  padding: 0 2%;
}
.Taskhint image {
  width: 100%;
}