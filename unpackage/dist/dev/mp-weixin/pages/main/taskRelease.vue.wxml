<template name="b3e7e130">
  <view class="_view data-v-68dcb354 taskView">
    <view class="_view data-v-68dcb354 taskTitle">
      <text class="_text data-v-68dcb354">标题：</text>
      <input class="_input data-v-68dcb354 title" value="{{taskData.taskTitle}}" bindinput="handleProxy" type="text" placeholder="请输入标题(最多6字符)" maxlength="6" data-eventid="{{'mag-0'}}" data-comkey="{{$k}}" />
    </view>
    <view class="_view data-v-68dcb354 taskContent">
      <textarea class="_textarea data-v-68dcb354 contentText" value="{{taskData.copyWriting}}" bindinput="handleProxy" placeholder="请输入广告内容(最多150字符)" maxlength="150" data-eventid="{{'kid-1'}}" data-comkey="{{$k}}" />
      <view class="_view data-v-68dcb354 contentImg">
        <view class="_view data-v-68dcb354 ts-uploader">
          <view class="_view data-v-68dcb354 ts-uploader-body">
            <view class="_view data-v-68dcb354 ts-uploader__files">
              <block wx:key="index" key="{{index}}" wx:for="{{imageList}}" wx:for-index="index" wx:for-item="image">
                <view class="_view data-v-68dcb354 ts-uploader__file">
                  <image class="_image data-v-68dcb354 ts-uploader__img" src="{{image}}" bindtap="handleProxy" bindlongpress="handleProxy" data-eventid="{{'OOu-2-'+index}}" data-comkey="{{$k}}"></image>
                </view>
              </block>
              <view class="_view data-v-68dcb354 ts-uploader__input-box" wx:if="{{imageList.length < count}}">
                <view class="_view data-v-68dcb354 ts-uploader-info ts-h5">{{imageList.length}}/{{count}}</view>
                <view class="_view data-v-68dcb354 ts-uploader__input" bindtap="handleProxy" data-eventid="{{'yfw-3'}}" data-comkey="{{$k}}"></view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="_view data-v-68dcb354 taskTitles">
      <text class="_text data-v-68dcb354">单笔广告费：</text>
      <input type="number" maxlength="5" value="{{taskData.contributionNo}}" bindinput="handleProxy" bindblur="handleProxy" data-eventid="{{'AwG-4'}}" data-comkey="{{$k}}" class="_input data-v-68dcb354" />
    </view>
    <view class="_view data-v-68dcb354 taskTitles">
      <text class="_text data-v-68dcb354">任务发布数量：</text>
      <input type="number" maxlength="5" value="{{taskData.releaseTaskNo}}" bindinput="handleProxy" bindblur="handleProxy" data-eventid="{{'C8O-5'}}" data-comkey="{{$k}}" class="_input data-v-68dcb354" />
    </view>
    <view class="_view data-v-68dcb354 taskTitles">
      <text class="_text data-v-68dcb354">广告总价：</text>
      <text class="_text data-v-68dcb354">{{taskData.allMoney}}</text>
    </view>
    <view class="_view data-v-68dcb354 submitPrice">
      <button class="_button data-v-68dcb354 taskGo" bindtap="handleProxy" data-eventid="{{'226-6'}}" data-comkey="{{$k}}">发布任务</button>
    </view>
  </view>
</template>