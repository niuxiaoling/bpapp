
.avatars {
  background: -webkit-linear-gradient(bottom, #E61532,#E86318);
  background: linear-gradient(bottom, #E61532,#E86318);
  padding-top: 50rpx;
}
.avatar_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 100%;
  padding: 10rpx 0;
}
.avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-redius: 50%;
}
.avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.avatar-msg {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  height: 40rpx;
}
.avatar-msg view {
  margin: 0 10rpx;
}
.sign {
  position: absolute;
  bottom: 0rpx;
  left: 50rpx;
  width: 130rpx;
}
.sign image {
  width: 130rpx;
  height: 30rpx;
}
.phoneNo {
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  margin-top: 10rpx;
  padding-bottom: 20rpx;
}
.income {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
  border-top: 1px solid #FFD39C;
}
.income-list {
  width: 33.3%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding-top: 20rpx;
  color: #FFF;
}
.list-text {
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.lists {
  background-color: #F4F0F1;
}
.lists .listli {
  width: 100%;
  height: 100rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 10rpx 0;
  font-size: 30rpx;
  border-bottom: 1px solid #dadada;
}
.lists .listli image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.lists .listli text {
  margin-left: 20rpx;
}
.getOut {
  background: -webkit-linear-gradient(bottom, #E61532,#E86318);
  background: linear-gradient(bottom, #E61532,#E86318);
  color: #FFF;
}