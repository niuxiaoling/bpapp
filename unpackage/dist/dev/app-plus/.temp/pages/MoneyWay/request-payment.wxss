
.page-section {
  width: auto;
  margin: 30rpx;
  padding: 64rpx 30rpx;
  background-color: #fff;
  text-align: center;
  font-size: 28rpx;
}
.uni-list-cell {
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
}
.desc {
  color: #B2B2B2;
  font-size: 40rpx;
  margin: 0 30rpx;
}
.price {
  margin-top: 30rpx;
  margin-bottom: 25rpx;
  position: relative;
  display: inline-block;
  font-size: 78rpx;
  line-height: 1;
}
.rmbLogo {
  position: absolute;
  font-size: 40rpx;
  top: 8rpx;
  left: -40rpx;
}
.pay-item {
  margin-top: 10rpx;
  height: 60rpx;
  background: #fff;
}