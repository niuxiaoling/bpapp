<template name="6430a8ee">
  <view class="_view data-v-1f6b411a taskView">
    <view class="_view data-v-1f6b411a taskTitle">
      <text class="_text data-v-1f6b411a">标题：</text>
      <input class="_input data-v-1f6b411a title" type="text" placeholder="请输入标题(最多12字符)" maxlength="12" />
    </view>
    <view class="_view data-v-1f6b411a taskContent">
      <textarea class="_textarea data-v-1f6b411a contentText" placeholder="请输入广告内容(最多150字符)" />
      <view class="_view data-v-1f6b411a contentImg">
        <view class="_view data-v-1f6b411a ts-uploader">
          <view class="_view data-v-1f6b411a ts-uploader-body">
            <view class="_view data-v-1f6b411a ts-uploader__files">
              <block wx:key="index" key="{{index}}" wx:for="{{imageList}}" wx:for-index="index" wx:for-item="image">
                <view class="_view data-v-1f6b411a ts-uploader__file">
                  <image class="_image data-v-1f6b411a ts-uploader__img" src="{{image}}" bindtap="handleProxy" bindlongpress="handleProxy" data-eventid="{{'OWk-0-'+index}}" data-comkey="{{$k}}"></image>
                </view>
              </block>
              <view class="_view data-v-1f6b411a ts-uploader__input-box">
                <view class="_view data-v-1f6b411a ts-uploader-info ts-h5">{{imageList.length}}/{{count}}</view>
                <view class="_view data-v-1f6b411a ts-uploader__input" bindtap="handleProxy" data-eventid="{{'gXA-1'}}" data-comkey="{{$k}}"></view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="_view data-v-1f6b411a taskTitles">
      <text class="_text data-v-1f6b411a">单笔广告费：</text>
      <input type="number" maxlength="5" value="{{singleMoney}}" bindinput="handleProxy" data-eventid="{{'r6f-2'}}" data-comkey="{{$k}}" class="_input data-v-1f6b411a" />
    </view>
    <view class="_view data-v-1f6b411a taskTitles">
      <text class="_text data-v-1f6b411a">任务发布数量：</text>
      <input type="number" maxlength="5" value="{{taskNumber}}" bindinput="handleProxy" data-eventid="{{'Ejc-3'}}" data-comkey="{{$k}}" class="_input data-v-1f6b411a" />
    </view>
    <view class="_view data-v-1f6b411a taskTitles">
      <text class="_text data-v-1f6b411a">广告总价：</text>
      <text class="_text data-v-1f6b411a">{{totalPrices}}</text>
    </view>
    <view class="_view data-v-1f6b411a submitPrice">
      <button class="_button data-v-1f6b411a taskGo">发布任务</button>
    </view>
  </view>
</template>